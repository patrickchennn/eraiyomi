{
  "compilerOptions": {
    // basic options
    "target": "ES6",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,      
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,    
    // module resolution options
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": ["ES2022"],
    "allowJs": true, // Allow importing JavaScript files
    // source map options
    "outDir": "build-dev",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "inlineSources": true, // Include original source code in source maps

    "removeComments": false, // Preserve comments
    "pretty": true, // Format output in a readable manner
    "noUnusedLocals": true, // TypeScript compiler will report an error for local variables that are declared but never used in your code

    "paths": {
      // "@/*": [
      //   "./src/*"
      // ],
      "@shared/*": ["../shared/*"]
    },
  },
  "include": ["src/**/*","declaration.d.ts","../shared"],
  "exclude": [
    "./node_modules",
  ],
}
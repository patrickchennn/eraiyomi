{
    "sourceMaps": false,  // Disable source maps
    "presets": [
        ["@babel/preset-env", { 
            "targets": { 
                "node": "current" 
            }, 
            "modules": false 
        }],
        "@babel/preset-react",
        "@babel/preset-typescript"
    ],
    "plugins": [
        ["transform-remove-console", { "exclude": ["error", "warn", "info"] }]
    ],
    "ignore": ["**/shared/**/*"] // Ignore the shared directory

}
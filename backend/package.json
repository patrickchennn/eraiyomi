{
  "name": "eraiyomi-backend",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "watch:dev": "nodemon ./build-dev/backend/index.js -V --delay 1",
    "watch:build-dev": "tsc --watch",
    "dev": "rimraf ./build-dev && tsc && concurrently npm:watch:build-dev npm:watch:dev",
    "build1": "rimraf ./build-prod && tsc -p tsconfig.prod.json",
    "build2-babel": "babel ./build-prod --extensions \".ts,.js\" --out-dir dist --source-maps",
    "type-check": "tsc --noEmit -p tsconfig.prod.json",
    "build": "npm run build1 && npm run build2-babel",
    "start": "cross-env NODE_ENV=production PORT=8999 node ./dist/index.js",
    "test": "jest"
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/register": "^7.22.15",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/etag": "^1.8.1",
    "@types/express": "^4.17.15",
    "@types/fresh": "^0.5.0",
    "@types/ignore-styles": "^5.0.0",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash.isstring": "^4.0.7",
    "@types/lodash.remove": "^4.7.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^18.11.17",
    "@types/uuid": "^9.0.6",
    "babel-jest": "^29.6.2",
    "babel-loader": "^9.1.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "concurrently": "^7.6.0",
    "css-loader": "^6.8.1",
    "jest": "^29.6.2",
    "nodemon": "^2.0.20",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.3",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.679.0",
    "@aws-sdk/s3-request-presigner": "^1.0.0-rc.3",
    "@google-analytics/data": "^3.2.0",
    "@google-cloud/local-auth": "^2.1.1",
    "@types/lodash.isempty": "^4.4.9",
    "@types/validator": "^13.11.5",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.1",
    "chalk": "^5.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "etag": "^1.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "fresh": "^0.5.2",
    "googleapis": "^120.0.0",
    "highlight.js": "^11.10.0",
    "ignore-styles": "^5.0.1",
    "jsonwebtoken": "^9.0.0",
    "lodash.isempty": "^4.4.0",

                        "type":"object",
                        "properties": {
                          "parentCommentId":{
                            "type": "string"
                          },
                          "replies":{
                            "type": "array",
                            "items": {
                              "$ref": "#/components/schemas/CommentTemplate"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

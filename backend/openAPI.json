    "/account/login-traditional":{
      "post":{
        "summary": "login",
        "description": "login with the account that created with register method",
        "tags": [
          "account"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties":{
                  "username":{
                    "type": "string"
                  },
                  "email":{
                    "type":"boolean"
                  },
                  "password":{
                    "type": "string"
                  }
                }
              },
              "examples":{
                "client-req-body":{
                  "value":{
                    "username":"abcd",
                    "email":"abcd@mail.com",
                    "password":"abcd123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "success login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username":{
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },

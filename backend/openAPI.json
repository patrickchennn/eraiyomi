              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id":{
                      "type":"string"
                    },
                    "articleIdRef":{
                      "type": "string"
                    },
                    "commentsIdRef":{
                      "type": "string"
                    },
                    "items":{
                      "type": "array",
